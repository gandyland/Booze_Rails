<h2>New Beer for <%= link_to @brewery.name, @brewery %></h2>

<%= form_for [@brewery, @beer] do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :brewery %>
<%= f.text_field :brewery %>

<%= f.label :style %>
<%= f.text_field :style %>

<%= f.label :abv %>
<%= f.integer :abv %>

<%= f.submit %>
<% end %>
